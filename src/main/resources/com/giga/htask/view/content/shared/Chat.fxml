<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ChatController">
    <ScrollPane fx:id="chatScrollPane" prefHeight="600">
        <TextArea fx:id="chatArea" editable="false" wrapText="true" prefWidth="400" prefHeight="Infinity" />
    </ScrollPane>
    <HBox>
        <TextField fx:id="textPrompt" prefWidth="300" />
        <Button text="Send" />
    </HBox>
</VBox>
